        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Padding="20">

            <Image Aspect="AspectFit" Source="{Binding Slika, Converter={StaticResource imgConv}}" d:Source="pokloni3.jpg" WidthRequest="400" HeightRequest="220"></Image>
