<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MobileApp.ViewModels"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             mc:Ignorable="d"
             x:Class="MobileApp.Views.ProizvodiPage"
             Title="Početna">
    <ContentPage.Content>
        <StackLayout>
            <Grid RowSpacing="10" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="120"></RowDefinition>
                    <RowDefinition Height="150"></RowDefinition>
                    <RowDefinition Height="120"></RowDefinition>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                    <ColumnDefinition Width="50*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                
                <!--Početna poruka-->
                <StackLayout Grid.Row="0" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand">

                    <Image WidthRequest="100"  HeightRequest="50" Aspect="AspectFit" Source="iconPng.png" VerticalOptions="Center"></Image>
                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-LightItalic.ttf" HorizontalTextAlignment="Center" FontSize="Default">Pokloni.ba</Label>
                </StackLayout>

                <!--Prvi Red-->

                <StackLayout BackgroundColor="#FBC1BC" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    
                    <forms:AnimationView
                        Scale="1.4"
	x:Name="categoryToys" 
	Animation="ctgrToys.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="50"
    WidthRequest="100"
	VerticalOptions="Center" 
	HorizontalOptions="Center" />

                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-Bold.ttf"   TextColor="White" Text="Igračke" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"></Label>
                    <Label  FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-LightItalic.ttf" TextColor="White" Text="Igračke za sve uzraste" HorizontalTextAlignment="Center" FontAttributes="Italic" FontSize="Caption"></Label>
                </StackLayout>

                <StackLayout BackgroundColor="#B6E6BD" Grid.Row="1" Grid.Column="1"  Margin="0,0,10,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    <forms:AnimationView
                        Scale="1.3"
	x:Name="categoyClohes" 
	Animation="ctgrClothes.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="50"
    WidthRequest="100"
	VerticalOptions="Center" 
	HorizontalOptions="Center" />

                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-Bold.ttf"   TextColor="White" Text="Odjeća" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"></Label>
                    <Label  FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-LightItalic.ttf" TextColor="White" Text="Nike, Addidas, Lacoste" HorizontalTextAlignment="Center" FontAttributes="Italic" FontSize="Caption"></Label>
                </StackLayout>

                <!--Glavni red-->

                <StackLayout Grid.ColumnSpan="2" Grid.Row="2" BackgroundColor="#FC7FB2" Margin="10, 0, 10, 0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    
                    
                    <forms:AnimationView
                        Scale="0.6"
	x:Name="categoyPopular" 
	Animation="2086-wow.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="100"
    WidthRequest="100"
	VerticalOptions="Center" 
	HorizontalOptions="Center" />

                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-Bold.ttf"   TextColor="White" Text="Najpopularniji pokloni" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"></Label>

                </StackLayout>

                <!--Treći red-->

                <StackLayout BackgroundColor="#B1E8ED" Grid.Row="3" Grid.Column="0" Margin="10,0,0,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>

                    <forms:AnimationView
                        Scale="0.9"
	x:Name="categoyTech" 
	Animation="ctgrTech.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="50"
    WidthRequest="100"
	VerticalOptions="Center" 
	HorizontalOptions="Center" />

                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-Bold.ttf"  TextColor="White" Text="Tehnologija" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"></Label>
                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-LightItalic.ttf"  TextColor="White" Text="Samsung, Apple, Microsoft" HorizontalTextAlignment="Center" FontAttributes="Italic" FontSize="Caption"></Label>
                </StackLayout>


                <StackLayout BackgroundColor="#F1BC31" Grid.Row="3" Grid.Column="1" Margin="0,0,10,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>

                    <forms:AnimationView
                        Scale="0.7"
	x:Name="categoyJewelry" 
	Animation="ctgrJewelry.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="50"
    WidthRequest="100"
	VerticalOptions="Center" 
	HorizontalOptions="Center" />


                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-Bold.ttf" TextColor="White" Text="Nakit" HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="Large"></Label>
                    <Label FontFamily="\Pokloni.ba-Cross-platform-application\MobileApp\MobileApp.Android\Assets\Montserrat-LightItalic.ttf"  TextColor="White" Text="Ženski i muški nakit" HorizontalTextAlignment="Center" FontAttributes="Italic" FontSize="Caption"></Label>
                </StackLayout>

                <!--Četvrti red-->

                <!--<StackLayout Grid.ColumnSpan="2" Grid.Row="4" BackgroundColor="#F2F5F9">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>

                    <forms:AnimationView
                        Scale="0.8"
	x:Name="location" 
	Animation="location.json" 
	Loop="True" 
	AutoPlay="True"
    HeightRequest="100"
    WidthRequest="100"
    Margin="10,0,0,0"                    />

                    

                </StackLayout>-->

                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>